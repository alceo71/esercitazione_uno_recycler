<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="etichetta">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textColor">@color/coloreEtichetta</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="valore">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textColor">@color/coloreValore</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="titolo">
        <item name="android:background">@drawable/sfondo_titolo</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">@color/coloreTitolo</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="introduzione">
        <item name="android:justificationMode">inter_word</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:lineSpacingExtra">1dp</item>
        <item name="android:textSize">@dimen/font_size_introduzione</item>
    </style>

</resources>
